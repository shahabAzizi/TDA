<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/irsans</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_bar</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:radius">10dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
    </style>
    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="IPTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="BluetoothNameTextAppearance" parent="TextAppearance.AppCompat.Small.Inverse">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>
