<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_loading_box"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:id="@+id/device_record_layout_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:padding="@dimen/padding_loading_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_tick"
                android:scaleType="fitXY"
                android:id="@+id/device_record_layout_tick"
                android:layout_width="12dp"
                android:layout_height="12dp"></ImageView>

            <TextView
                android:id="@+id/device_record_layout_name"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/device_record_layout_ip"
                android:textSize="10sp"
                android:layout_below="@+id/device_record_layout_name"
                android:textColor="@color/gray_light"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/device_record_layout_type"
                android:textSize="10sp"
                android:textAlignment="textStart"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/device_record_layout_name"
                android:textColor="@color/gray_light"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>